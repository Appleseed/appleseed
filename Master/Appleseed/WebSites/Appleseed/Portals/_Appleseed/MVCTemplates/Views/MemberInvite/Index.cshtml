
@{
    ViewBag.Title = "Index";
}

<h2>Invite Members</h2>
<input type="button" id="addMember" class="CommandButton" value="Invite Members" />
<div id="divmemberInvites">
    <table class="form-table hide" id="customFields">
        <tr class="inviteRow" valign="top">
            <th scope="row"><label for="customFieldName">Name &nbsp;</label></th>
            <td>
                <input type="text" class="code" id="txtFullName_1" name="customFieldName[]" value="" placeholder="Name" /> &nbsp;
                Email
                <input type="text" class="code" id="txtEmail_1" name="customFieldValue[]" value="" placeholder="Email" /> &nbsp;
                <a href="javascript:void(0);" class="addNew CommandButton">Add</a>
            </td>
        </tr>
    </table>
    <br />
    <input type="button" value="Send Invites" id="sendInvites" class="CommandButton" style="display:none !important" />
    <input type="button" value="Cancel" id="cancel" class="CommandButton" style="display:none !important" />
</div>

<script src="~/aspnet_client/js/jquery.blockUI.js"></script>
<script src="~/aspnet_client/MemberInvite/MemberInvite.js"></script>